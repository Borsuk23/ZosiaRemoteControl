<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.zosiaremotecontrol.ControlPanel">



    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButtonUp"
        android:src="@drawable/arrow_up"
        android:layout_alignTop="@id/action_bar"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="goUp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButtonRight"
        android:src="@drawable/arrow_right"
        android:layout_below="@+id/imageButtonUp"
        android:layout_toEndOf="@+id/imageButtonUp"
        android:clickable="true"
        android:onClick="goRight"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButtonLeft"
        android:src="@drawable/arrow_left"
        android:layout_below="@+id/imageButtonUp"
       android:layout_toStartOf="@+id/imageButtonDown"
        android:clickable="true"
        android:onClick="goLeft"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:id="@+id/imageButtonDown"
        android:src="@drawable/arrow_down"
        android:clickable="true"
        android:layout_marginBottom="1000dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageButtonLeft"
        android:onClick="goDown"/>

</RelativeLayout>
